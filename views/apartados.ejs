</div><!-- /.row -->

<div class="row" v-bind:class="{ hidden: apartado_btns }">
    <div class="col-lg-6" style="text-align: center">
        <button type="button" v-on:click="apartado_btns= true; apartado_nuevo= true" class="btn btn-primary btn-lg"> Nuevo Apartado</button>
    </div>
    <div class="col-lg-6" style="text-align: center">
        <button type="button" v-on:click="apartado_btns= true; apartado_nuevo= false" class="btn btn-primary btn-lg">Apartado Existente</button>
    </div>
</div><!-- /.row -->

<div class="row" v-bind:class="{ hidden: !(apartado_btns && !apartado_nuevo) }">
  <div class="col-lg-12">
