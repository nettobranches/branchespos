  </div>
  <div class="col-lg-3">
      <div class="form-group">
          <label>Total</label>
          <input type="text" v-model="cVentaDetalle.total" class="form-control" disabled>
          <!-- <p class="help-block">Example block-level help text here.</p> -->
      </div>
  </div>
</div><!-- /.row -->

<nuevo-cliente v-bind:class="{ hidden: !(apartado_btns && apartado_nuevo) }" v-bind:cliente.sync="cliente"></nuevo-cliente>

