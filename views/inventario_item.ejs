
<div class="row">
  <div class="col-lg-12">
    <h1 v-if="inventario" >Inventario <small> {{inventario[0].name}} </small></h1>
    <ol class="breadcrumb">
      <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
      <li><a href="/inventario"><i class="fa fa-dashboard"></i> Inventario </a></li>
      <li class="active" v-if="inventario" ><i class="fa fa-table"></i> {{inventario[0].name}}</li>
    </ol>

  </div>
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <h2>Agregar Existencia</h2>
  </div>
  <div class="col-lg-2">
    <div class="form-group">
              <label>Codigo</label>
              <input type="text" v-model="nitem.codigo" class="form-control">
            </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group">
              <label>Color</label>
              <select class="form-control" v-model="nitem.type">
                <option v-for="item in colores" :value="nitem.id">{{item.name}}</option>
              </select>
            </div>
  </div>
  <div class="col-lg-2">
      <div class="form-group">
          <button v-on:click="add_inventario()" class="btn btn-lg btn-primary" type="button"> Agregar  </button>
      </div>
  </div>
</div><!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <h2>Existencias</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped tablesorter">
        <thead>
          <tr>
            <th class="header">Id <i class="fa fa-sort"></i></th>
            <th class="header">UPC <i class="fa fa-sort"></i></th>
            <th class="header">Color <i class="fa fa-sort"></i></th>
            <th class="header">Existencias <i class="fa fa-sort"></i></th>
          </tr>
        </thead>
        <tbody>
          <tr v-for="item in inventario" >
            <td>{{item.id}}</td>
            <td> <input v-on:keyup.enter="updateColorUpc(item.product_id, item.option_id, item.upc)" v-model="item.upc" type="text" />  </td>
            <td>{{item.des}}</td>
            <td> <input type="text" v-model="item.quantity"/>  </td>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div><!-- /.row -->
